    border-radius: 4px;
    position: relative;
    cursor: pointer;
  }

  .custom-checkbox:checked {
    background-color: white; /* box when checked */
  }

  .custom-checkbox:checked::after {
    content: 'âœ“';
    color: white;
    font-size: 12px;
    font-weight: bold;
