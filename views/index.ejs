  }

        @keyframes roller {
          0%  {
              transform: translateX(-60vw);
              width: 20% ;
          }
          100% {
            transform: translateX(100vw);
            width: 60% ;
          }
        }
        .roller {
            animation: roller 1.5s linear  infinite ;
        }
